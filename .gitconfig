[user]
	name = Tim Kleinschmidt
	email = tim.kleinschmidt@gmail.com
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	d = diff --color-words
	s-u = submodule update --init --recursive
	s-s = submodule status
	ls = ls-files
	l = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	ll = log --stat --abbrev-commit
	score = shortlog -sn
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[help]
        autocorrect = 1
[color]
	ui = auto
[core]
	pager = less -r
	editor = vim
	whitespace = space-before-tab, trailing-space
	excludesfile = /home/tim/.gitignore
	autocrlf = input
	safecrlf = true
[merge]
	conflictstyle = diff3
	tool = vimdiff
[rerere]
	enabled = 1
[pack]
	threads = 4
[cola]
	fontdiff = MesloLGS-DZ-Regular-Powerline,9,-1,5,50,0,0,0,0,0
[gui]
	editor = vim
[format]
	pretty = oneline

[user]
	name = Tim Kleinschmidt
	email = tim.kleinschmidt@gmail.com
[push]
	default = current
[color]
	ui = true
[status]
	showUntrackedFiles = all
[alias]
	l = log --graph --abbrev-commit --decorate --date=relative --all
	ll = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	lll = log --stat --abbrev-commit
	grep = grep --break --heading --line-number
	up = pull --rebase --autostash
	g = grep --break --heading --line-number
	forget = "! /usr/local/bin/git fetch -p && /usr/local/bin/git branch -vv | awk '/: gone]/{print $1}' | xargs /usr/local/bin/git branch -D"
[help]
	autocorrect = 1
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = vim
	whitespace = trailing-space,space-before-tab,tab-in-indent,tabwidth=4
	excludesfile = /Users/tim/.gitignore_global
	autocrlf = false
	filemode = false
[merge]
	conflictstyle = diff3
	tool = vimdiff
	verbosity = 2
[rerere]
	enabled = 1
[pack]
	threads = 8
[format]
	pretty = oneline
[branch]
	autosetuprebase = always
[apply]
	whitespace = warn
[fetch]
	prune = true
	fsckobjects = true
[rebase]
	autosquash = true
# show git notes and automatically rewrite them after git commit --amend and git rebase[notes]
[notes]
	rewriteRef = refs/notes/*
	displayRef = *
	rewriteMode = concatenate
[grep]
	extendRegexp = true
	lineNumber = true
[transfer]
	fsckobjects = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse

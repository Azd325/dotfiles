[user]
	name = Tim Kleinschmidt
	email = tim.kleinschmidt@gmail.com 
[push]
	default = current
[color]
	ui = auto
[alias]
	st = status
	ci = commit
	co = checkout
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	pf = push --force-with-lease
	l = log --graph --abbrev-commit --decorate --date=relative --all
	ll = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	lll = log --stat --abbrev-commit
	up = pull --rebase --autostash
[help]
	autocorrect = 1
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = vim
	whitespace = trailing-space,space-before-tab,tab-in-indent,tabwidth=4
	excludesfile = /Users/tim/.gitignore_global
	autocrlf = false
	filemode = false
[merge]
	conflictstyle = diff3
	tool = vimdiff
	verbosity = 2
[rerere]
	enabled = 1
[pack]
	threads = 8
[format]
	pretty = oneline
[branch]
	autosetuprebase = always
[apply]
	whitespace = warn
[fetch]
	prune = true
# show git notes and automatically rewrite them after git commit --amend and git rebase[notes]
[notes]
	rewriteRef = refs/notes/*
	displayRef = *
	rewriteMode = concatenate

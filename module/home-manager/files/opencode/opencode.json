{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "devenv": {
      "type": "local",
      "command": ["devenv", "mcp"],
      "enabled": true,
      "environment": {
        "DEVENV_ROOT": "config.devenv.root"
      }
    }
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
